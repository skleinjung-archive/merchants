<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/card_yellow"/>

            <stroke
                android:color="@color/black"
                android:width="@dimen/card_border_thickness"/>

            <padding
                android:left="@dimen/card_padding_horizontal"
                android:right="@dimen/card_padding_horizontal"
                android:top="@dimen/card_padding_vertical"
                android:bottom="@dimen/card_padding_vertical"
                />

            <corners android:radius="@dimen/card_border_radius"/>
        </shape>
    </item>
    <item android:state_selected="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/card_yellow"/>

            <stroke
                android:color="@color/red"
                android:width="@dimen/card_border_thickness"/>

            <padding
                android:left="@dimen/card_padding_horizontal"
                android:right="@dimen/card_padding_horizontal"
                android:top="@dimen/card_padding_vertical"
                android:bottom="@dimen/card_padding_vertical"
                />

            <corners android:radius="@dimen/card_border_radius"/>
        </shape>
    </item>
</selector>

